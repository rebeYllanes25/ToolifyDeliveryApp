<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardNotificacion"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <View
            android:id="@+id/indicadorNoLeida"
            android:layout_width="8dp"
            android:layout_height="0dp"
            android:background="@color/color_principal"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardIcono"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/fondo_celeste_claro"
            app:layout_constraintStart_toEndOf="@id/indicadorNoLeida"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="12dp">

            <ImageView
                android:id="@+id/ivIconoTipo"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_notification"
                app:tint="@color/color_principal"
                android:contentDescription="@string/notificaciones_icono_tipo" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/color_texto_normal"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="@id/cardIcono"
            app:layout_constraintTop_toTopOf="@id/cardIcono"
            app:layout_constraintEnd_toStartOf="@id/btnOpciones"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            tools:text="Tu pedido #12345 está en camino" />

        <TextView
            android:id="@+id/tvMensaje"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/color_subtitulos"
            android:textSize="14sp"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="@id/tvTitulo"
            app:layout_constraintTop_toBottomOf="@id/tvTitulo"
            app:layout_constraintEnd_toEndOf="@id/tvTitulo"
            tools:text="El repartidor está de camino a tu ubicación. Tiempo estimado: 15 minutos." />

        <ImageView
            android:id="@+id/ivIconoTiempo"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/ic_clock"
            app:tint="@color/color_subtitulos"
            android:contentDescription="@string/notificaciones_icono_tiempo"
            app:layout_constraintStart_toStartOf="@id/tvTitulo"
            app:layout_constraintTop_toBottomOf="@id/tvMensaje"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvFechaHora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_subtitulos"
            android:textSize="12sp"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@id/ivIconoTiempo"
            app:layout_constraintTop_toTopOf="@id/ivIconoTiempo"
            app:layout_constraintBottom_toBottomOf="@id/ivIconoTiempo"
            tools:text="Hace 5 minutos" />

        <TextView
            android:id="@+id/tvBadgeEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_badge_rounded"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:textColor="@color/color_status_texto"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/tvFechaHora"
            app:layout_constraintTop_toTopOf="@id/tvFechaHora"
            app:layout_constraintBottom_toBottomOf="@id/tvFechaHora"
            tools:text="Nuevo pedido"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/btnOpciones"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_more_vert"
            android:contentDescription="@string/notificaciones_opciones"
            app:tint="@color/color_subtitulos"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>