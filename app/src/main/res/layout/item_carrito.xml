<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginTop="6dp"
    android:layout_marginEnd="12dp"
    android:layout_marginBottom="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeColor="#E8E8E8"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp">

        <!-- Imagen del producto con bordes redondeados -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgProducto"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            app:strokeColor="#E0E0E0"
            app:strokeWidth="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/no_imagen" />

        <!-- Botón eliminar estilizado -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardEliminar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:cardBackgroundColor="#FFEBEE"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/btnEliminar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/delete_description"
                android:padding="6dp"
                android:src="@drawable/ic_remove"
                app:tint="#D32F2F" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Información del producto -->
        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="#1A1A1A"
            android:textSize="15sp"
            android:textStyle="bold"
            android:lineSpacingExtra="2dp"
            app:layout_constraintEnd_toStartOf="@id/cardEliminar"
            app:layout_constraintStart_toEndOf="@id/imgProducto"
            app:layout_constraintTop_toTopOf="@id/imgProducto"
            tools:text="@string/txt_example_product" />

        <TextView
            android:id="@+id/tvCategoria"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="#757575"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/tvNombre"
            app:layout_constraintStart_toStartOf="@id/tvNombre"
            app:layout_constraintTop_toBottomOf="@id/tvNombre"
            tools:text="@string/txt_category" />

        <TextView
            android:id="@+id/tvPrecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="#2E7D32"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/tvNombre"
            app:layout_constraintTop_toBottomOf="@id/tvCategoria"
            tools:text="S/ 25.00" />

        <!-- Controles de cantidad mejorados -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardCantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#F5F5F5"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="@id/tvNombre"
            app:layout_constraintTop_toBottomOf="@id/tvPrecio">

            <LinearLayout
                android:id="@+id/layoutCantidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="2dp"
                android:paddingBottom="2dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDecrementar"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:contentDescription="@string/decrease_unit"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    app:icon="@drawable/ic_menos"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="18dp"
                    app:iconTint="#424242" />

                <TextView
                    android:id="@+id/tvCantidad"
                    android:layout_width="36dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#1A1A1A"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    tools:text="1" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnIncrementar"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:contentDescription="@string/increase_unit"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    app:icon="@drawable/ic_mas"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="18dp"
                    app:iconTint="#424242" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Subtotal destacado -->
        <LinearLayout
            android:id="@+id/layoutSubtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@id/cardCantidad"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/cardCantidad">

            <TextView
                android:id="@+id/tvSubtotalLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/subTotal"
                android:textColor="#757575"
                android:textSize="13sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvSubtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:textColor="#1A1A1A"
                android:textSize="17sp"
                android:textStyle="bold"
                tools:text="S/ 50.00" />
        </LinearLayout>

        <!-- Divisor sutil (opcional) -->
        <View
            android:id="@+id/divisor"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="#F0F0F0"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgProducto" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>