<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fondo">

    <androidx.cardview.widget.CardView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="16dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_back"
                app:tint="@color/color_texto_normal" android:contentDescription="@string/desc_boton_atras"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/titulo_rastreo"
                android:textColor="@color/color_texto_normal"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/btnReloadPage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_reaload" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            tools:context=".SeguimientoActivity">

            <androidx.cardview.widget.CardView
                android:id="@+id/cdEntrega"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="25dp"
                android:backgroundTint="@color/color_principal"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:gravity="center"
                        android:text="@string/seguimiento_subtitulo_card"
                        android:textColor="@color/color_subtitulos"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvTiempoCalculate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="8dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="@string/seguimiento_subtitulo_card"
                        android:textColor="@color/color_subtitulos"
                        android:textSize="14sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cdEstadosEntrega"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="25dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cdEntrega">

                <LinearLayout
                    android:id="@+id/cdEntregas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:id="@+id/contenedor_estados"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/icEstadoAceptado"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/ic_border_status"
                            android:contentDescription="Aceptado"
                            android:src="@drawable/ic_checkmark"
                            app:tint="@color/white" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="2dp"
                            android:layout_marginHorizontal="8dp"
                            android:layout_weight="1"
                            android:background="@color/color_principal" />

                        <ImageView
                            android:id="@+id/icEstadoPreparando"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/ic_border_status_off"
                            android:contentDescription="Preparando"
                            android:src="@drawable/ic_checkmark"
                            app:tint="@color/white" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="2dp"
                            android:layout_marginHorizontal="8dp"
                            android:layout_weight="1"
                            android:background="@color/gris_claro" />

                        <ImageView
                            android:id="@+id/icEstadoTransito"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:contentDescription="En trÃ¡nsito"
                            android:src="@drawable/ic_truck"
                            app:tint="@color/gris_claro" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="2dp"
                            android:layout_marginHorizontal="8dp"
                            android:layout_weight="1"
                            android:background="@color/gris_claro" />

                        <ImageView
                            android:id="@+id/icEstadoCerca"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:contentDescription="Cerca"
                            android:src="@drawable/ic_location"
                            app:tint="@color/gris_claro" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="2dp"
                            android:layout_marginHorizontal="8dp"
                            android:layout_weight="1"
                            android:background="@color/gris_claro" />

                        <ImageView
                            android:id="@+id/icEstadoEntregado"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/ic_border_status_off"
                            android:contentDescription="Entregado"
                            android:src="@drawable/ic_checkmark"
                            app:tint="@color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/contenedor_etiqueta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/etq_aceptado"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/lblAceptado"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Aceptado"
                                android:textColor="@color/color_principal"
                                android:textSize="11sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/etq_preparado"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/lblPreparando"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Preparando"
                                android:textColor="@color/gris_claro"
                                android:textSize="11sp" />

                        </LinearLayout>

                        <!-- ETIQUETA 3: EN TRÃNSITO -->
                        <LinearLayout
                            android:id="@+id/etq_transito"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/lblEnTransito"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="En trÃ¡nsito"
                                android:textColor="@color/gris_claro"
                                android:textSize="11sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <!-- ETIQUETA 4: CERCA -->
                        <LinearLayout
                            android:id="@+id/etq_cerca"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/lblCerca"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Cerca"
                                android:textColor="@color/gris_claro"
                                android:textSize="11sp" />

                        </LinearLayout>

                        <!-- ETIQUETA 5: ENTREGADO -->
                        <LinearLayout
                            android:id="@+id/etq_entregado"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/lblEntregado"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Entregado"
                                android:textColor="@color/gris_claro"
                                android:textSize="11sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cdRepartidor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="25dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cdEstadosEntrega">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/imgRepartidor"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:scaleType="centerCrop"
                            app:shapeAppearanceOverlay="@style/radius25dp"
                            app:srcCompat="@drawable/ic_person" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:orientation="vertical"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tvNameRepartidor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                tools:text="" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:id="@+id/imageView"
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:layout_marginEnd="4dp"
                                    android:contentDescription="@string/codigoQR"
                                    android:scaleType="centerInside"
                                    app:srcCompat="@drawable/ic_star" />

                                <TextView
                                    android:id="@+id/tvNumberCalificacion"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="12dp"
                                    android:textSize="12sp"
                                    android:textColor="@color/color_texto_normal"
                                    tools:text="" />

                                <TextView
                                    android:id="@+id/tvNumEntregas"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:textColor="@color/color_texto_normal"
                                    tools:text="" />
                            </LinearLayout>

                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/btnCallRepartidor"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginEnd="8dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="@string/btn_call_repartidor"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/ic_phone_pedidos" />

                        <ImageButton
                            android:id="@+id/btnMessageRepartidor"
                            android:layout_width="37dp"
                            android:layout_height="37dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="@string/btn_message_repartidor"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/ic_message_vc" />

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cdSeguimiento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:backgroundTint="@color/fondo_celeste_claro"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="12dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_marginEnd="8dp"
                                android:contentDescription="@string/description_image"
                                android:scaleType="centerInside"
                                app:srcCompat="@drawable/ic_location" />

                            <TextView
                                android:id="@+id/tvDistanciaRepartidor"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/color_principal"
                                android:textSize="14sp"
                                tools:text="" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cdResumen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="25dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cdRepartidor">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:text="@string/seguimiento_resumen"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp">


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvResumen"
                            android:layout_width="match_parent"
                            android:layout_height="340dp"
                            android:layout_marginBottom="15dp"
                            android:nestedScrollingEnabled="true" >

                        </androidx.recyclerview.widget.RecyclerView>

                        <View
                            android:id="@+id/shadowBottom"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_gravity="bottom"
                            android:background="@drawable/gradient_shadow_bottom"
                            android:clickable="false"
                            android:focusable="false" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:text="@string/seguimiento_campo_subtotal"
                                android:textColor="@color/color_subtitulos"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:text="@string/seguimiento_campo_coste"
                                android:textColor="@color/color_subtitulos"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:text="@string/seguimiento_campo_propina"
                                android:textColor="@color/color_subtitulos"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/seguimiento_campo_total"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvSubtotal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:textColor="@color/color_texto_normal"
                                android:textSize="12sp"
                                tools:text="@string/seguimiento_fmt_subtotal" />

                            <TextView
                                android:id="@+id/tvCosteEnvio"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:textColor="@color/color_texto_normal"
                                android:textSize="12sp"
                                tools:text="@string/seguimiento_fmt_coste" />

                            <TextView
                                android:id="@+id/tvPropina"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:textColor="@color/color_texto_normal"
                                android:textSize="12sp"
                                tools:text="@string/seguimiento_fmt_propina" />

                            <TextView
                                android:id="@+id/tvTotalPagar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color_principal"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                tools:text="@string/seguimiento_fmt_total" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGenerarQr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="25dp"
                android:padding="14dp"
                android:text="@string/btn_generar_qr"
                android:textSize="14sp"
                android:textStyle="bold|italic"
                app:backgroundTint="@color/color_principal"
                app:cornerRadius="20dp"
                app:elevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cdResumen" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>