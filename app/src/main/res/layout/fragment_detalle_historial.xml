<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".presentation.features.cliente.historial.detalleHistorial.Fragments.DetalleHistorialFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cdResumenPedido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:id="@+id/divContenedorResumen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:id="@+id/divContenedorTitutlo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="16dp">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:contentDescription="@string/historial_detalle_fragment_titulo_calificacion"
                            android:padding="8dp"
                            android:src="@drawable/ic_box_open"
                            app:tint="@color/color_principal" />

                        <TextView
                            android:id="@+id/textView23"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:text="@string/historial_detalle_fragment_titulo_calificacion"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="16dp"
                        android:background="@color/gris_claro" />

                    <LinearLayout
                        android:id="@+id/divSeparadorCuerpo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/divCuerpoUno"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingEnd="8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="16dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imageView18"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:contentDescription="Número"
                                        android:src="@drawable/ic_address_card_perfil"
                                        app:tint="@color/color_principal" />

                                    <TextView
                                        android:id="@+id/textView24"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="8dp"
                                        android:text="@string/historial_detalle_fragment_titulo_numero"
                                        android:textColor="@color/gris_claro"
                                        android:textSize="12sp" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tvNumeroIdFragment"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="28dp"
                                    android:layout_marginTop="4dp"
                                    android:text="TextView"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="16dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imageView19"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:contentDescription="Productos"
                                        android:src="@drawable/ic_address_card_perfil"
                                        app:tint="@color/color_principal" />

                                    <TextView
                                        android:id="@+id/textView26"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="8dp"
                                        android:text="@string/historial_detalle_fragment_titulo_productos"
                                        android:textColor="@color/gris_claro"
                                        android:textSize="12sp" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tvProductoTotalesFragment"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="28dp"
                                    android:layout_marginTop="4dp"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="16dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imageView20"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:contentDescription="Dirección"
                                        android:src="@drawable/ic_address_card_perfil"
                                        app:tint="@color/color_principal" />

                                    <TextView
                                        android:id="@+id/textView29"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="8dp"
                                        android:text="@string/historial_detalle_fragment_titulo_direccion"
                                        android:textColor="@color/gris_claro"
                                        android:textSize="12sp" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tvDireccionEntregaFragment"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="28dp"
                                    android:layout_marginTop="4dp"
                                    android:text="TextView"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imageView21"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:contentDescription="Fecha"
                                        android:src="@drawable/ic_address_card_perfil"
                                        app:tint="@color/color_principal" />

                                    <TextView
                                        android:id="@+id/textView35"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="8dp"
                                        android:text="@string/historial_detalle_fragment_titulo_fecha"
                                        android:textColor="@color/gris_claro"
                                        android:textSize="12sp" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tvFechEmitida"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="28dp"
                                    android:layout_marginTop="4dp"
                                    android:text="TextView"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:id="@+id/SeparadorDetalleHistorialFragment"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:background="@color/gris_claro" />

                        <LinearLayout
                            android:id="@+id/divCuerpoDos"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="16dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imageView22"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:contentDescription="Total"
                                        android:src="@drawable/ic_address_card_perfil"
                                        app:tint="@color/color_principal" />

                                    <TextView
                                        android:id="@+id/textView36"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="8dp"
                                        android:text="@string/historial_detalle_fragment_titulo_total"
                                        android:textColor="@color/gris_claro"
                                        android:textSize="12sp" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tvTotalCompra"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="28dp"
                                    android:layout_marginTop="4dp"
                                    android:text="TextView"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="16dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imageView23"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:contentDescription="Coste"
                                        android:src="@drawable/ic_address_card_perfil"
                                        app:tint="@color/color_principal" />

                                    <TextView
                                        android:id="@+id/textView37"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="8dp"
                                        android:text="@string/historial_detalle_fragment_titulo_coste"
                                        android:textColor="@color/gris_claro"
                                        android:textSize="12sp" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tvCosteEnvioFragment"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="28dp"
                                    android:layout_marginTop="4dp"
                                    android:text="TextView"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="16dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imageView24"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:contentDescription="Propina"
                                        android:src="@drawable/ic_address_card_perfil"
                                        app:tint="@color/color_principal" />

                                    <TextView
                                        android:id="@+id/textView38"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="8dp"
                                        android:text="@string/historial_detalle_fragment_titulo_propina"
                                        android:textColor="@color/gris_claro"
                                        android:textSize="12sp" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tvPropinaRepartidor"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="28dp"
                                    android:layout_marginTop="4dp"
                                    android:text="TextView"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imageView25"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:contentDescription="Total Pagado"
                                        android:src="@drawable/ic_address_card_perfil"
                                        app:tint="@color/color_principal" />

                                    <TextView
                                        android:id="@+id/textView39"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="8dp"
                                        android:text="@string/historial_detalle_fragment_titulo_Total"
                                        android:textColor="@color/gris_claro"
                                        android:textSize="12sp" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tvTotalPagadoFragment"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="28dp"
                                    android:layout_marginTop="4dp"
                                    android:text="TextView"
                                    android:textColor="@color/color_principal"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cdEstadosEntrega"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:id="@+id/cdEntregas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="Estado del Pedido"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/contenedor_estados"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/icEstadoAceptado"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/ic_border_status"
                            android:contentDescription="Aceptado"
                            android:padding="6dp"
                            android:src="@drawable/ic_clock"
                            app:tint="@color/white" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="3dp"
                            android:layout_marginHorizontal="4dp"
                            android:layout_weight="1"
                            android:background="@color/color_principal" />

                        <ImageView
                            android:id="@+id/icEstadoPreparando"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/ic_border_status_off"
                            android:contentDescription="Preparando"
                            android:padding="6dp"
                            android:src="@drawable/ic_checkmark"
                            app:tint="@color/white" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="3dp"
                            android:layout_marginHorizontal="4dp"
                            android:layout_weight="1"
                            android:background="@color/gris_claro" />

                        <ImageView
                            android:id="@+id/icEstadoTransito"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/ic_border_status_off"
                            android:contentDescription="En tránsito"
                            android:padding="6dp"
                            android:src="@drawable/ic_truck"
                            app:tint="@color/white" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="3dp"
                            android:layout_marginHorizontal="4dp"
                            android:layout_weight="1"
                            android:background="@color/gris_claro" />

                        <ImageView
                            android:id="@+id/icEstadoCerca"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/ic_border_status_off"
                            android:contentDescription="Cerca"
                            android:padding="6dp"
                            android:src="@drawable/ic_location"
                            app:tint="@color/white" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="3dp"
                            android:layout_marginHorizontal="4dp"
                            android:layout_weight="1"
                            android:background="@color/gris_claro" />

                        <ImageView
                            android:id="@+id/icEstadoEntregado"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/ic_border_status_off"
                            android:contentDescription="Entregado"
                            android:padding="6dp"
                            android:src="@drawable/ic_star_2"
                            app:tint="@color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/contenedor_etiqueta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/lblAceptado"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Pendiente"
                            android:textColor="@color/color_principal"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/lblPreparando"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Aceptado"
                            android:textColor="@color/gris_claro"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/lblEnTransito"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="En camino"
                            android:textColor="@color/gris_claro"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/lblCerca"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Cerca"
                            android:textColor="@color/gris_claro"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/lblEntregado"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Entregado"
                            android:textColor="@color/gris_claro"
                            android:textSize="11sp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cdInformacionRepartidor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:id="@+id/divContenedorRepartidor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Título del Card -->
                    <LinearLayout
                        android:id="@+id/divContenedorTituloRepartidro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="16dp">

                        <ImageView
                            android:id="@+id/imgRepa"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:contentDescription="@string/historial_detalle_fragment_titulo_repartidor"
                            android:padding="8dp"
                            android:src="@drawable/ic_box_open"
                            app:tint="@color/color_principal" />

                        <TextView
                            android:id="@+id/tvRepaTitutlo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:text="@string/historial_detalle_fragment_titulo_repartidor"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Divisor -->
                    <View
                        android:id="@+id/view3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="16dp"
                        android:background="@color/gris_claro" />

                    <!-- Contenedor de dos columnas -->
                    <LinearLayout
                        android:id="@+id/divSeparadorRepartidor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <!-- Columna Izquierda -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingEnd="8dp">

                            <!-- Nombre Completo -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="16dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imageView26"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:contentDescription="Nombre"
                                        android:src="@drawable/ic_address_card_perfil"
                                        app:tint="@color/color_principal" />

                                    <TextView
                                        android:id="@+id/textView41"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="8dp"
                                        android:text="@string/historial_detalle_fragment_titulo_nombres"
                                        android:textColor="@color/gris_claro"
                                        android:textSize="12sp" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tvNombreCompletoFragment"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="28dp"
                                    android:layout_marginTop="4dp"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <!-- Teléfono -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imageView27"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:contentDescription="Teléfono"
                                        android:src="@drawable/ic_address_card_perfil"
                                        app:tint="@color/color_principal" />

                                    <TextView
                                        android:id="@+id/textView42"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="8dp"
                                        android:text="@string/historial_detalle_fragment_titulo_telefono"
                                        android:textColor="@color/gris_claro"
                                        android:textSize="12sp" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tvTelefonoRepaFragment"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="28dp"
                                    android:layout_marginTop="4dp"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Separador Vertical -->
                        <View
                            android:id="@+id/view4"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:background="@color/gris_claro" />

                        <!-- Columna Derecha -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="8dp">

                            <!-- Especificaciones -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="16dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imageView28"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:contentDescription="Especificaciones"
                                        android:src="@drawable/ic_address_card_perfil"
                                        app:tint="@color/color_principal" />

                                    <TextView
                                        android:id="@+id/textView44"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="8dp"
                                        android:text="@string/historial_detalle_fragment_titulo_especificaciones"
                                        android:textColor="@color/gris_claro"
                                        android:textSize="12sp" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tvEspecificacionesPedido"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="28dp"
                                    android:layout_marginTop="4dp"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <!-- Movilidad -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imageView29"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:contentDescription="Movilidad"
                                        android:src="@drawable/ic_address_card_perfil"
                                        app:tint="@color/color_principal" />

                                    <TextView
                                        android:id="@+id/textView45"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="8dp"
                                        android:text="@string/historial_detalle_fragment_titulo_movilidad"
                                        android:textColor="@color/gris_claro"
                                        android:textSize="12sp" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tvMovilidadRepartidor"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="28dp"
                                    android:layout_marginTop="4dp"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>