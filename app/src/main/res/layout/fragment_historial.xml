<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="24dp"
    tools:context=".presentation.features.cliente.historial.HistorialFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTituloHistorial"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/tab_historial"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/color_texto_normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnFiltros" />

        <ImageButton
            android:id="@+id/btnFiltros"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_filter"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/desc_icono_filtros"
            app:tint="@color/color_principal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <View
            android:id="@+id/indicadorFiltros"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/bg_indicator"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/btnFiltros"
            app:layout_constraintTop_toTopOf="@id/btnFiltros"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>