<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/titulo_detalle_pedido"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/color_texto_normal"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvPedidoIdDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/formato_pedido_id"
            android:textSize="16sp"
            android:textColor="@color/color_principal"
            android:gravity="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle" />

        <TextView
            android:id="@+id/labelQr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_codigo_verificacion"
            android:textSize="14sp"
            android:textColor="@color/color_subtitulos"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvPedidoIdDetalle" />

        <TextView
            android:id="@+id/tvQrCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/codigoQR"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/color_texto_normal"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:padding="16dp"
            android:background="@drawable/bg_qr_code"
            app:layout_constraintTop_toBottomOf="@id/labelQr" />

        <TextView
            android:id="@+id/tvInstrucciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/instrucciones_codigo_verificacion"
            android:textSize="14sp"
            android:textColor="@color/color_subtitulos"
            android:gravity="center"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvQrCode" />

        <androidx.cardview.widget.CardView
            android:id="@+id/btnCerrar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/color_principal"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/tvInstrucciones">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_cerrar"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_gravity="center" />

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>